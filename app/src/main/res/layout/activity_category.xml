<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/category"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_background"
    tools:context=".Levels">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#200000ff">

        <TextView
            android:id="@+id/level"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="50dp"
            android:text="LEVEL"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:textSize="35dp" />

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_home_button"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/star_golden" />

            <TextView
                android:id="@+id/starCount_cat"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:textColor="#fdfdfd" />
        </LinearLayout>

        <Button
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/back1" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:layout_margin="20dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        android:weightSum="3.5">

        <RelativeLayout
            android:id="@+id/pic_button_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="top"
            android:background="#601F73CE">

            <TextView
                android:id="@+id/picbutton"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


            <ImageView
                android:id="@+id/halfbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"/>

            <Button
                android:id="@+id/star_pic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/star_silver" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2.1">

            <RelativeLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/dialougebutton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:background="#601F73CE" />

                <Button
                    android:id="@+id/star_quote"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/star_silver" />
            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1" />


            <RelativeLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/emojibutton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#601F73CE"
                    android:scrollbars="horizontal"
                    android:gravity="center"
                    android:orientation="horizontal" />

                <Button
                    android:id="@+id/star_emoji"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/star_silver" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <Button

                android:id="@+id/prvbutton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/sel_previous" />

            <Button
                android:id="@+id/nxtbutton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/sel_next" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/categoryBannerAd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"></LinearLayout>

</RelativeLayout>